<h1>New Gallery</h1>

<% if @gallery.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @gallery.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @gallery do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>
  <%= f.label :city %>
  <%= f.text_field :city %> <br>
  <%= f.label :price %>
  <%= f.number_field :price %> <br>

  <%= f.submit %>
<% end %>
