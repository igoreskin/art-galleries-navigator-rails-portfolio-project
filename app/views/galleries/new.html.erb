<h1>New Gallery form</h1>
<%= form_for @gallery do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.fields_for :paintings, @gallery.paintings.build do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>
    <%= p.label :style %>
    <%= p.text_field :style %>
    <%= p.label :year %>
    <%= p.number_field :year %>
  <% end %>
  <%= f.submit %>
<% end %>
